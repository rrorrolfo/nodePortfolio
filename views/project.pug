extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- Dynamically adds the project title.
        h1= project.project_name

        //- Dynamically adds the project description.
        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //- Uses an `each` iterator to dynamically add the technologies used in each project.
        ul
          each string in project.technologies
            li= string

        //- Adds URLs to the hrefs below so they link to the repo and the live version of each project.
        a.button.expanded(href=`${project.live_link}` target="_blank") Live Demo
        a.button.expanded(href=`${project.github_link}` target="_blank") GitHub Repo
    
    //- Images of each project
    img.image(src=`${project.image_urls[0]}`)
    img.image(src=`${project.image_urls[2]}`)
    img.image(src=`${project.image_urls[1]}`)